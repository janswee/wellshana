<div class="container-fluid">
    <div class="row">
      <div class="col-md-7 col-md-offset-3">
        <h1>Upcoming Appointments</h1>
        <div ng-show="appointments.length === 0">No appointments at this time</div>
        <br>
        <div ng-repeat="appointment in appointments" class="row tile">
          <div class="col-md-6">
            <div class="row" ng-hide="appointment.isTherapist">
              <div id="prof-image" class="col-md-4" style="width: 100px;" >
                <span>
                  <img class="profile-image" ng-src="{{appointment.image.imagePath}}{{appointment.image.imageName}}">
                </span>
              </div>
              <div id="prof-summary" class="col-md-8">
                  <div id="prof-header">
                    <!--<a href="#prof-detail/{{therapist._id}}" class="charity">-->
                    <a ui-sref="prof-detail({id: '{{appointment.therapist.user._id}}' })" class="charity">
                      <h4 id="profile-name"> {{appointment.therapist.user.name.firstName}} {{appointment.therapist.user.name.lastName}}, PCCI {{appointment.therapist.qualifications.license.licenseNo}}</h4></a>
                    {{appointment.therapist.professionalTitle}}
                  </div>
              </div><!-- end of col -->
            </div><!-- end of row -->
            <div class="row" ng-show="appointment.isTherapist">
              <div id="prof-image" class="col-md-4" style="width: 100px;" >
                <span>
                  <img class="profile-image" ng-src="{{appointment.image.imagePath}}{{appointment.image.imageName}}">
                </span>
              </div>
              <div id="prof-summary" class="col-md-8">
                  <div id="prof-header">
                    <!--<a href="#prof-detail/{{therapist._id}}" class="charity">-->
                    <a ui-sref="prof-detail({id: '{{appointment.user._id}}' })" class="charity">
                      <h4 id="profile-name"> {{appointment.user.name.firstName}} {{appointment.user.name.lastName}}</h4>
                    </a>
                    {{appointment.user.phone.areacode}}) {{appointment.user.phone.number}}
                  </div>
              </div><!-- end of col -->
            </div><!-- end of row -->
            <div class="row">
              <div class="col-md-12">
                <button type="button" class="btn btn-sm btn-danger" ui-sref="session({apptId: '{{appointment._id}}' })" >Start Session</button>
                <button type="button" class="btn btn-sm btn-primary" ng-click="modifyAppt()">Modify Appointment</button>
                <button type="button" class="btn btn-sm" ng-click="cancelAppt()">Cancel Appointment</button>
              </div> <!-- end of col -->
            </div><!-- end of row-->
          </div><!-- end of col -->
          <div class="col-md-5">
            <h4>Appointment Details</h4>
            <td><strong>{{appointment.startDateTime | date: 'MMMM dd, yyyy' }}</strong>  at <strong>{{appointment.startDateTime | date: 'hh:mma' }}</strong></td>
            <div>Duration: {{appointment.duration}} minutes</div>
            <div>Online</div>
            <table class="table table-condensed borderless">
              <tbody>
                <tr>
                  <td>Cancellation Policy</td>
                  <td><strong>24 hour notice</strong></td>
                </tr>
                <p/>
                <tr>
                  <td>Session Fee</td>
                  <td><strong>$80</strong></td>
                </tr>
                <tr>
                  <td>Service Fee</td>
                  <td><strong>$2</strong></td>
                </tr>
                <tr>
                  <td><h4>Total</h4></td>
                  <td><strong><h4>$82</h4></strong></td>
                </tr>
              </tbody>
            </table>
        </div> <!--end of col -->
      </div><!-- end of row-->
    </div><!--/col-->
  </div><!--/row-->
  <br>
</div>
