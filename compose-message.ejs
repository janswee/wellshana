<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div>messageForm is {{messageForm}}</div>
      <div>message is {{message}}</div>
      <form class="form" id="composeMessage" name="composeMessage" method="post" ng-submit="onReplyToMessage()">
        <div class="media">
          <div class="media-body">
            <div class="form-group">
              <label for="name" class="control-label">To</label>
              <input type="text" class="form-control input-sm" id="toName" name="toName" ng-model="toUser.name.firstName" style="width: 300px" disabled>
            </div>
          </div>
          <div class="media-right media-middle">
            <a ng-show="toUser" ui-sref="prof-detail({id: message.toUser.id })">
                <img class="img-circle" width="75" ng-src="{{toUserProfImage.imagePath}}{{toUserProfImage.imageName}}">
            </a>
          </div>
        </div><!-- end of media -->
        <div class="form-group">
          <label for="name" class="control-label">Subject</label>
          <br>
          <input type="text" class="form-control input-sm" id="subject" name="toName" ng-model="messageForm.subject" style="width: 300px">
        </div>
        <div class="form-group">
          <br>
          <textarea rows="20" cols="75" ng-model="messageForm.body" />
        </div><!-- end of form group -->
        <div class="form-group">
          <div ng-show="formSuccess" class="alert alert-success" role="alert">
            <span class="sr-only">Success:</span>
            {{formSuccess.message}}
          </div>
          <div ng-show="formError" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            {{formError.message}}
          </div>
          <button type="button" class="btn btn-large btn-primary" name='Cancel' value="Cancel" ui-sref="prof-detail({id: message.toUser })">Cancel</button>
          <button type="submit" class="btn btn-large btn-primary" name='Send' value="Send">Send Message</button>
        </div><!-- end of form group -->
      </form>
    </div><!-- end of col -->
  </div><!--end of row-->
</div>
