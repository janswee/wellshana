<link href="stylesheets/session.css" rel="stylesheet" type="text/css">
<!--<script src="javascripts/simplewebrtc.bundle.js" type="text/javascript">
</script>-->
<div class="container-fluid" style="overflow-x: hidden;">
  <div class="row" id="stagingPanel" style='margin-top:50px'>
    <div class="col-md-6 col-md-offset-3">
      <div class="row">
        <div class="col-md-12">
          <br>
          <div ng-show="error" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            {{error.message}}
          </div>
        </div><!--col-->
      </div><!--row-->
      <div class="row">
        <div class="col-md-12">
          <div class="localVideo largeVideo" id="stagingLocal">
            <video id="localVideo"></video>
            <div id="volume-meter-staging" class="volume-meter-vertical">
              <div class="volume-meter-segment" ng-class="{active: activeVolSegment[$index]}" ng-repeat="n in [0,1,2,3,4]"></div>
            </div>
            <span class="fa fa-microphone fa-lg"></span>
          </div><!-- stagingLocal div -->
        </div><!-- col -->
      </div><!-- row -->
      <div class="row">
        <div class="col-md-12">
          <div style="text-align: center;">
            <div>
              Test that your audio and video are working properly
            </div><button class="btn btn-large btn-primary" name="Submit"
            type="submit" value="Join" ng-click="joinSession()">Join Session</button>
          </div>
        </div><!-- end of col-->
      </div><!-- end of row-->
    </div><!-- end of col-->
  </div><!-- end of stagingPanel row-->
  <div class="row" id="sessionPanel" style="overflow-x: hidden;">
    <div class="col-md-2">
      <div class="row">
        <div class="col-md-12">
          <div class="navbar-default">
            <div class="container-fluid">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#buttons" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
              </div>
                <div id="buttons" >
                  <div class="row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-green" name='Invite' value="Invite">
                          <span class="glyphicon glyphicon-link" aria-hidden="true"></span> Invite
                        </button>
                    </div><!--col-->
                    <div class="col-md-6">
                        <button type="button" class="btn btn-default" ng-click="leaveRoom()">
                          <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Leave
                        </button>
                    </div><!--col-->
                  </div><!--row-->
                      </li>
                      <li><a class='active' href="#">Help</a></li>
                      <li><a href="#">Leave</a></li>
                    </ul>
              </div>
            </div><!--/.container-fluid -->
          </div><!-- navbar default -->
        </div><!--col-->
      </div><!--row-->
      <div class="row">
        <div class="col-md-12">
              <input type="text" class="form-control input-sm" id="name" value="{{user.name.firstName}}" style="font-weight: bold; background-color:black; color: white; width: 200px;">
        </div><!--col-->
      </div><!--row-->
      <div class="row">
        <div id="local" class="col-md-12">
        </div><!--col-->
      </div><!--row-->
      <div class="row">
        <div class="col-md-12">
          <button type="submit" ng-class="localMicClass" name='Mic' value="Mic" ng-click="toggleLocalMic()"></button>
          <button type="submit" ng-class="videoClass" name='localVideo' value="localVideo" ng-click="toggleLocalVideo()"></button>
          <button type="submit" ng-class="shareScreenClass" name='shareScreen' value="shareScreen" ng-click="toggleShareScreen()"></button>
        </div><!-- end of col -->
      </div><!-- end of row -->
    </div><!-- end of col -->
    <div class="col-md-7">
      <div class="row">
        <div class="col-md-12">
          <div id="clock"></div>
        </div><!--col-->
      </div><!--row-->
      <div class="row">
        <div class="col-md-12">
          <div id="remotes" ng-class="remoteVideoClass">
            <span class="video-icon fa fa-video-camera fa-lg"></span>
            <span ng-click="toggleRemoteMic()" ng-class="remoteMicClass"></span>
          </div>
          <div class="stream-peer-info">
              <p data-hook="peer-name" title=""></p>
          </div>
          <div class="rtt-message">
              <p data-hook="last-message"></p>
              <p data-hook="rtt-message"></p>
          </div>
        </div><!--col-->
      </div><!--row-->
    </div><!-- end of col-md-7 -->
    <div class="col-md-3">
      <div class="row">
        <div class="col-md-12" ng-class="chatClassOne">
          <div class="chat-header">
            <h5 class="no-margin-bottom">
              <a ng-click='toggleChat()'>
                <i class="glyphicon glyphicon-chevron-down"></i>
                <i class="ss-icon ss-chat animated"></i>
                Chat
              </a>
              <i class="typing-icon" data-anddom-display="" data-anddom-hidden="true" data-hook="chat-composing" style="display: none;"></i>
            </h5>
          </div>
        </div><!--end of col-->
      </div><!--end of row-->
      <div class="row">
        <div class="col-md-12" ng-class="chatClassOne">
          <div class="chat-content">
            <div class="chat-messages" />
          </div><!--end of chat-content-->
        </div><!--end of col-->
      </div><!--end of row-->
      <div class="row">
        <div class="col-md-12" ng-class="chatClassOne">
          <div class="chat-input">
            <div data-hook="chat-input">
                <textarea id="inputMessage" ng-model="textMessageInput" press-enter-key="sendMessage()" placeholder="Send a message..."></textarea>
            </div>
          </div>
        </div><!--end of col-->
      </div><!--end of row-->
      <div class="row">
        <div class="col-md-12" ng-class="chatClassTwo">
            <h5>
                <a ng-click='toggleChat()'>
                  <i class="glyphicon glyphicon-chevron-up"></i>
                  <i class="typing-icon" data-anddom-display="" data-anddom-hidden="true" data-hook="chat-composing" style="display: none;"></i>
                  Chat
                </a>
            </h5>
          </div>
        </div><!--end of col-->
      </div><!--end of row-->
    </div><!--end of col-->
  </div><!--end of row-->
  <div class="row">
    <div class="col-md-12">
      <footer class="in-app-footer" role="contentinfo">
        <nav role="navigation">
          <ul class="list-unstyled list-inline no-margin-bottom">
            <li>
              <a class="button button-reset" href="https://about.talky.io" target="_blank">Help</a>
            </li>
            <li>
              <a class="button button-reset" data-hook="feedback" href="https://about.talky.io#feedback" target="_blank">Feedback</a>
            </li>
          </ul>
        </nav>
      </footer>
    </div><!-- end of col-->
  </div><!-- end of row-->
</div><!-- end of container-fluid -->
<script type="text/javascript">

    var myVar=setInterval(function(){myTimer()},1000);

    function myTimer() {
      var d = new Date();
      if (document.getElementById("clock") != null) {
        document.getElementById("clock").innerHTML = d.toLocaleTimeString();
      }
    }
</script>
