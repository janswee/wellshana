<div class="container-fluid" >
  <div class="row" style='margin-top:75px'>
    <div class="col-md-6 col-md-offset-3">
      <h3>Reset Password</h3>
      <form id="resetForm" class="form" name="resetPassword" method="post" ng-submit="onResetPassword()" >
        <div class="form-group">
          <label for="password">Email</label>
          <input type="text" class="form-control" id="email" ng-model="credentials.email" style="width: 200px">
        </div>
        <div class="form-group">
          <label for="challengeQuestion1">Challenge Question: {{challengeQuestion}}</label>
          <input type="text" class="form-control" id="challengeAnswer1" ng-model="credentials.challengeAnswer1" style="width: 200px">
        </div>
        <div class="form-group">
          <label for="challengeQuestion2">Challenge Question: {{challengeQuestion}}</label>
          <input type="text" class="form-control" id="challengeAnswer2" ng-model="credentials.challengeAnswer2" style="width: 200px">
        </div>
        <div ng-show="successMessage" class="alert alert-success" role="alert">
          <span class="sr-only">Success:</span>
          {{successMessage}}
        </div>
        <div ng-show="errorMessage" class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span>
          {{errorMessage}}
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-large btn-primary" name="Submit" value="Reset Password" >Reset Password</button>
        </div>
      </form>
</div><!-- end of container-fluid-->
